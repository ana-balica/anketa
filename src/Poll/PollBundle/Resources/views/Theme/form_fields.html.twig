{% block form_row %}
{% spaceless %}
    <div class="form-group">
        {{ form_label(form) }}
	      <a href="{{ path('poll_delete_question', {'question_id': 0}) }}" class="pull-right action-label red">Delete</a>
	      <a href="{{ path('poll_edit_question', {'question_id': 0}) }}" class="pull-right action-label">Edit</a>
        {{ form_errors(form) }}
        {{ form_widget(form) }}
    </div>
{% endspaceless %}
{% endblock form_row %}

{% block textarea_widget %}
{% spaceless %}
		<div {{ block('widget_container_attributes') }}>
        <textarea class="form-control" row="3" {{ block('widget_attributes') }} >{{ value }}</textarea>
		</div>
{% endspaceless %}
{% endblock textarea_widget %}

{% block choice_widget_expanded %}
{% spaceless %}
    <div {{ block('widget_container_attributes') }}>
    {% for child in form %}
	      <div class={% if multiple %}"checkbox"{% else %}"radio"{% endif %}>
        {{ form_widget(child) }}
        {{ form_label(child) }}
	      </div>
    {% endfor %}
    </div>
{% endspaceless %}
{% endblock choice_widget_expanded %}

{% block button_row %}
{% spaceless %}
    <div class="pull-right">
        {{ form_widget(form) }}
    </div>
{% endspaceless %}
{% endblock button_row %}